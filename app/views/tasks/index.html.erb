<div class="container">
  <h1>My Tasks</h1>
  <div class="row">
    <ul class="list-group">
      <% @tasks.each do |task| %>
        <li class="list-group-item col-md-4">
          <% if task.completed %>
            <i class="fas fa-check-square"></i>
          <% else %>
            <i class="far fa-square"></i>
          <% end %>
          <%= link_to task.title, task_path(task), class: "task-link" %>
        </li>
      <% end %>
    </ul>
  </div>
  <%= link_to 'Create new task', '/tasks/new', class: "btn btn-primary btn-sm mt-2" %>
</div>
